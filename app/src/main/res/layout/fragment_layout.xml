<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontawesometext="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/addmemory_bg">

    <FrameLayout
        android:alpha="1"
        android:id="@+id/id_MemoryHeaderImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_min_height"
        android:background="@android:color/white"
        android:layout_gravity="top">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/id_fragment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontawesometext:fa_icon="fa-chevron-left"
            android:layout_margin="10dp"
            android:textSize="32sp"
            android:layout_gravity="left"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/title_memory"
            android:layout_gravity="center"
            />

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/id_fragment_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontawesometext:fa_icon="fa-chevron-left"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            />
    </FrameLayout>
    <GridView
        android:id="@+id/image_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="0dp"
        android:src="@drawable/button_background" />

    <ImageView
        android:id="@+id/id_fragment_random_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/random4" />

    <include layout="@layout/window_radius"/>
</RelativeLayout>
