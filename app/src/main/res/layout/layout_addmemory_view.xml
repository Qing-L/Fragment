<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_AddMemoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <com.simple.jylsc.fragment.tool.recyclerviewheader.RecyclerViewHeader
        android:id="@+id/id_AddMemoryHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_max_height"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="添加记忆"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text" />
    </com.simple.jylsc.fragment.tool.recyclerviewheader.RecyclerViewHeader>

    <include layout="@layout/add_memory_button" />


</FrameLayout>